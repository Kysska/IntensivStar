<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/blueDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.Title.Collapsed" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Title.Expanded" parent="android:TextAppearance">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <!-- Custom Text Style -->

    <style name="LargeTitleCustomStyle" parent="parentTitleCustomStyle">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="MediumTitleCustomStyle" parent="parentTitleCustomStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SmallTitleCustomStyle" parent="parentTitleCustomStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="parentTitleCustomStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="LargeTextCustomStyle" parent="parentTextCustomStyle">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="MediumTextCustomStyle" parent="parentTextCustomStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SmallTextCustomStyle" parent="parentTextCustomStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="parentTextCustomStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textHintColor</item>
    </style>

    <!-- Transparent ImageButton Style -->
    <style name="TransparentImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:padding">0dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Checkbox Style -->
    <style name="ImageCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/checkbox_selector</item>
        <item name="android:padding">0dp</item>
    </style>


    <!-- Button Watch Style -->
    <style name="ButtonWatchStyle" parent="SmallTitleCustomStyle">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

</resources>
